//4060E023 翁蝶 
#include <iostream>
using namespace std;

class Ball
{
public:
  // The radius of this Ball
  double radius;

  // Construct a default Ball object
  Ball()
  {
    radius = 1;
  }

  // Construct a Ball object
  Ball(double newRadius)
  {
    radius = newRadius;
  }

  // Return the area of this Ball
  double getArea()
  {
    return radius * radius * 3.14159;
  }

    double volume()
  {
    return radius * radius * radius * 3.14159*4/3;
  }
};  // Must place a semicolon here

int main()
{
  Ball Ball1(1);
  Ball Ball2(5);
  Ball Ball3(10);
  Ball Ball4(15);
  Ball Ball5(20);
  Ball Ball6(25);
  Ball Ball7(30);
  Ball Ball8(35);
  Ball Ball9(40);
  Ball Ball10(45);

  cout << "半徑為"<< Ball1.radius << "的球:表面積為" << Ball1.getArea() <<",球體積為"<<Ball1.volume()<<endl;
  cout << "半徑為"<< Ball2.radius << "的球:表面積為" << Ball2.getArea() <<",球體積為"<<Ball2.volume()<<endl;
  cout << "半徑為"<< Ball3.radius << "的球:表面積為" << Ball3.getArea() <<",球體積為"<<Ball3.volume() <<endl;
  cout << "半徑為"<< Ball4.radius << "的球:表面積為" << Ball4.getArea() <<",球體積為"<<Ball4.volume() <<endl;
  cout << "半徑為"<< Ball5.radius << "的球:表面積為" << Ball5.getArea() <<",球體積為"<<Ball5.volume() <<endl;
  cout << "半徑為"<< Ball6.radius << "的球:表面積為" << Ball6.getArea() <<",球體積為"<<Ball6.volume() <<endl;
  cout << "半徑為"<< Ball7.radius << "的球:表面積為" << Ball7.getArea() <<",球體積為"<<Ball7.volume() <<endl;
  cout << "半徑為"<< Ball8.radius << "的球:表面積為" << Ball8.getArea() <<",球體積為"<<Ball8.volume() <<endl;
  cout << "半徑為"<< Ball9.radius << "的球:表面積為" << Ball9.getArea() <<",球體積為"<<Ball9.volume() <<endl;
  cout << "半徑為"<< Ball10.radius << "的球:表面積為" << Ball10.getArea() <<",球體積為"<<Ball10.volume() <<endl;

  return 0;
}
